<!doctype html>
<html>
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    {squarespace-headers}
  </head>
  <body 
    id="{squarespace.page-id}"
    x-data="setData"
    @resize.window="isMobile = (window.innerWidth < 768) ? true : false"
    :class="{ '!overflow-hidden' : showNav }"
    @keydown.escape.window="showNav=false"
    x-cloak
    >
    <header>
      <div :class="showNav ? 'absolute bg-white/100 inset-0 z-10 flex flex-col' : 'flex mx-2 md:grid_ mt-2 mb-20'">
        <squarespace:navigation navigationId="mainNav" template="navigation" />
      </div>
    </header>