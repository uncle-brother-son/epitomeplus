{.section item}

  <script>console.log('hi', {@|json});</script>

  <!--WRAPPER-->
  <article id="post-{id}" class="col-start-1 col-end-4 md:col-end-6 grid_" data-item-id="{id}">

    <!--POST TILE-->
    <div class="col-start-1 col-end-4 md:col-end-6 mb-3 md:mb-5">
      <h1 class="text-22 font-bold" data-content-field="title">
        {.passthrough?}
          <a href="{sourceUrl}" target="_blank">{title}</a>
        {.or}
          {title}
        {.end}
      </h1>
    </div>

    <div class="col-start-1 col-end-4 md:col-end-3">
      [copy-1]
    </div>

    <div class="col-start-1 col-end-4 col-start-4 md:col-end-5">
      {.repeated section categories}
        <a class="category" href="{collection.fullUrl}?category={@|url-encode}">{@}</a>{.alternates with} &
      {.end}
    </div>

    <div class="col-start-1 col-end-4 md:col-start-5 md:col-end-6">
      [copy-2]
    </div>

    <div class="col-start-1 col-end-4 md:col-end-6">
      {body}
    </div>


    <!--BLOG INJECTION-->
    {postItemInjectCode}

  </article>

{.end}


<!--PAGINATION-->
{.section pagination}
  <div class="grid_">
    <nav class="col-start-1 col-end-4 md:col-end-6">

      <!--NEWER PAGE-->
      {.section prevItem}
        <a href="{fullUrl}">Newer</a>
      {.or}
        <a class="disabled">Newer</a>
      {.end}

      <!--OLDER PAGE-->
      {.section nextItem}
        <a href="{fullUrl}">Older</a>
      {.or}
        <a class="disabled">Older</a>
      {.end}

    </nav>
  </div>
{.end}
