
<ul class="flex flex-col gap-2 mx-2">
  <li class="{.section active}active{.end}">
    <a href="">All</a>
  </li>
  {.repeated section categories}
    <li class="{.section categoryFilter}active{.end}">
      <a href="{collection.fullUrl}?category={@|url-encode}">{@}</a>
    </li>
  {.end}
</ul>

<script>console.log({@|json});</script>


<!-- item loop -->
<ul class="grid grid-cols-2 md:grid-cols-3 gap-1 mx-2">
  {.repeated section items}
    <li>
      <article id="post-{id}" class="blog-list-item {@|item-classes}" data-item-id="{id}">
        <a href="{fullUrl}" class="block">
          <img {@|image-meta} />
        </a>
        <h2 class="title" data-content-field="title">
          <a href="{fullUrl}">{title}</a>
        </h2>
      </article>
    </li>
  {.or}
</ul>

  <!-- no items means no blog posts -->
  <p><em>No blog posts yet.</em></p>

{.end}

<!-- pagination -->
{.if pagination}
  <nav class="blog-list-pagination">

    <!-- newer page -->
    {.if pagination.prevPage}
      <a href="{pagination.prevPageUrl}">Newer</a>
    {.or}
      <a class="disabled">Newer</a>
    {.end}

    <!-- older page -->
    {.if pagination.nextPage}
      <a href="{pagination.nextPageUrl}">Older</a>
    {.or}
      <a class="disabled">Older</a>
    {.end}

  </nav>
{.end}
